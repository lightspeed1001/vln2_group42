
@{
    ViewData["Title"] = "Home Page";
}
<div class="categories">
    <h3 class="marbot">Categories</h3>
    <div class="btn-group-vertical categorylist" role="group" aria-label="...">
        @foreach (var item in ViewBag.Categories)
        {
            <a class="btn btn-default btnover" asp-controller="Home" asp-action="Details" asp-route-id="@item.ID">@item.Name</a>
        }      
    </div>
</div>
<div>
    <table class="table table-striped table-hover">
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Rating</th>
        </tr>
        @foreach (var movie in Model) 
        {
            <tr>
                <td><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a></td>
                <td>@movie.Genre</td>
                <td>@movie.Rating</td>
            </tr>
        }
    </table>
</div>
