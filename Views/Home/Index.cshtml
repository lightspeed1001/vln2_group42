@{
    ViewData["Title"] = "Home Page";
}
<!-- Categories container -->
<div class="categories">
    <h3 class="marbot">Categories</h3>
    <div class="btn-group-vertical categorylist" role="group" aria-label="...">
        @foreach (var item in ViewBag.Categories)
        {
            <a class="btn btn-default btnover" asp-controller="Home" asp-action="Details" asp-route-id="@item.ID">@item.Name</a>
        }      
    </div>
</div>
<div class="slideshow">
 <!-- Slideshow container -->
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <img class="imgslid" src="https://images.gr-assets.com/books/1348990566l/5470.jpg" style="width:100%">
            <div class="text">Caption Text</div>
        </div>

        <div class="mySlides fade">
            <img class="imgslid" src="https://images.gr-assets.com/books/1348990566l/5470.jpg" style="width:100%">
            <div class="text">Caption Two</div>
        </div>

        <div class="mySlides fade">
            <img class="imgslid" src="https://images.gr-assets.com/books/1348990566l/5470.jpg" style="width:100%">
            <div class="text">Caption Three</div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div> 
</div>

<!-- Special offer Container -->
<div class="specialoffer">
    <h3>New Offer</h3>

    @foreach (var item in ViewBag.NewestThree)
    {
        <div class="speclit">
            <a asp-controller="Book" asp-action="Details" asp-route-id="@item.ID"><img class="topselimg" src="@item.ImagePath" alt=""></a>
            <h5>@item.Title</h5>
        </div>
        
    }
</div>

